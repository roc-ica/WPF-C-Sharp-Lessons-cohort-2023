<Window x:Class="WPF_C_Sharp_Lesson_2.SimpleBindingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Binding Example" Height="200" Width="300">
    <Grid>
        <TextBox Width="200" Height="25" Margin="50,30,0,0"
                 Text="{Binding BoundText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Width="200" Height="25" Margin="50,70,0,0" 
                   Text="{Binding BoundText}" FontSize="16"/>
    </Grid>
</Window>
